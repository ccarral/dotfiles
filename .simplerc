set encoding=utf-8
set nocompatible
set fillchars=vert:â”‚ 

set shiftwidth=4
set autoindent
set backspace=indent,eol,start
set tabstop=4
set softtabstop=4
set expandtab
set scrolloff=3
set smarttab
set incsearch
set ruler
set display+=lastline

set number
set cursorline
set relativenumber


"cada que se abre una ventana horizontal, el default es abajo
set splitbelow
"cada que se abre una ventana vertical, el default es derecha
set splitright

"Path recursivo
set path+=**

set wildmenu
set guicursor=
let mapleader = ","


"Mapeo kj -> ESC 
inoremap kj <ESC>
inoremap jj <ESC>
inoremap JJ <ESC>
inoremap KJ <ESC>

"Mapeo cc-> :comando
map cc <ESC> :

"Mapeo Clipboard
vnoremap <C-c> "+y
inoremap <C-v> <ESC>"+pa

"Mapeos para cambiar de buffer
map <C-w> <C-w><C-w>

set autoread

syntax enable

hi LineNr ctermbg=NONE guibg=NONE

"   Buffer change
nnoremap <leader>b :ls<CR>:b<space>

"   Write key-binding
nnoremap <Leader>w :w<CR>

"   Tag kb
nnoremap <Leader>t :tag<Space>

"   vsplit kb
nnoremap <Leader>v :vsplit<CR>

"   Unmap J deletion
map J <NOP>

nnoremap <Leader>f :find 
nnoremap <Leader>e :edit 



"Settings de status
set laststatus=2
set statusline="\       <<%f>>    %m%r%h%w[%{&ff}]%y[%p%%]"

"Colores de terminal
if has('nvim') || has('termguicolors')
  set termguicolors
endif

""filetype plugin on


"Config para omnifunc
set complete-=i
set omnifunc=syntaxcomplete#Complete

autocmd CursorMovedI * if pumvisible() == 0|pclose|endif
autocmd InsertLeave * if pumvisible() == 0|pclose|endif

let g:java_highlight_functions= "style"
let g:java_highlight_java_lang_ids=1

"Config para C
autocmd FileType c setlocal cindent

"================== recognize header files as C ============
augroup project
  autocmd!
  autocmd BufRead,BufNewFile *.h,*.c set filetype=c
augroup END
"===========================================================
